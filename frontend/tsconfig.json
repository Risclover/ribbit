{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true, // keep JS files compiling
    "checkJs": false, // turn on later
    "strict": false, // tighten later
    "isolatedModules": true,
    "noEmit": true, // CRA still emits JS via Babel
    "baseUrl": "src",
    "paths": { "@/*": ["*"] }
  },
  "include": ["src"]
}
